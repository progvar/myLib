{
  "name": "mylib_progvar",
  "description": "My first library for testing purposes",
  "main": "dist/index.js",
  "version": "1.6.0",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src/index.js -o dist/index.js",
    "postbuild": "cp src/some_text.json dist/some_text.json",
    "start": "node src/index.js",
    "test": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "check-coverage": "istanbul check-coverage --statements 60 --branches 60 --functions 60 --lines 60",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/progvar/myLib.git"
  },
  "keywords": [
    "first",
    "library"
  ],
  "author": "Gyula VÃ¡radi <prog.varadi@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/progvar/myLib/issues"
  },
  "homepage": "https://github.com/progvar/myLib#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.4.5",
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "commitizen": "2.5.0",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.4.4"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage && npm run build",
      "post-commit": "npm run report-coverage"
    }
  }
}
